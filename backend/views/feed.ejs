    </div>

    <div class="text-center mb-4">
      <h2 class="section-title">Pop Jams</h2>
      <p class="section-subtitle">Pop Hits For You To Check Out!</p>
    </div>
    <div class="container mt-5">
      <!-- Section Title -->


      <!-- Jam List -->
      <div class="row g-3">
        <% for (var i=0; i < popJams.length; i++) { %>
          <div class="col-12 col-sm-6 col-md-4 col-lg-3">
            <a href="/clips/jam/<%= popJams[i]._id %>" class="jam-card">
              <div class="card">
                <div class="card-img">
                  <img src="<%= popJams[i].image %>" alt="<%= popJams[i].title %>" class="img-fluid">
                </div>
                <div class="card-body">
                  <h5 class="card-title">
                    <%= popJams[i].title %>
                  </h5>
                  <p>
                    <%= popJams[i].description %>
                  </p>
                </div>
              </div>
            </a>
          </div>
          <% } %>
      </div>



      <div class="text-center mb-4">
        <h2 class="section-title">Explore All Jams</h2>
        <p class="section-subtitle">Recently Created Jams</p>
      </div>
      <div class="container mt-5">
        <!-- Section Title -->


        <!-- Jam List -->
        <div class="row g-3">
          <% for (var i=0; i < jams.length; i++) { %>
            <div class="col-12 col-sm-6 col-md-4 col-lg-3">
              <a href="/clips/jam/<%= jams[i]._id %>" class="jam-card">
                <div class="card">
                  <div class="card-img">
                    <img src="<%= jams[i].image %>" alt="<%= jams[i].title %>" class="img-fluid">
                  </div>
                  <div class="card-body">
                    <h5 class="card-title">
                      <%= jams[i].title %>
                    </h5>
                    <p>
                      <%= jams[i].description %>
                    </p>
                  </div>
                </div>
              </a>
            </div>
            <% } %>
        </div>

        <!-- Pagination Controls -->
        <% if (totalPages > 1) { %>
        <div class="container mt-5 mb-5">
          <nav aria-label="Jam feed pagination">
            <ul class="pagination justify-content-center">
              <% if (hasPrevPage) { %>
                <li class="page-item">
                  <a class="page-link" href="/feed?page=<%= currentPage - 1 %>" aria-label="Previous">
                    <span aria-hidden="true">&laquo; Previous</span>
                  </a>
                </li>
              <% } else { %>
                <li class="page-item disabled">
                  <span class="page-link">&laquo; Previous</span>
                </li>
              <% } %>

              <%
                // Show up to 5 page numbers
                let startPage = Math.max(1, currentPage - 2);
                let endPage = Math.min(totalPages, currentPage + 2);

                if (startPage > 1) { %>
                  <li class="page-item">
                    <a class="page-link" href="/feed?page=1">1</a>
                  </li>
                  <% if (startPage > 2) { %>
                    <li class="page-item disabled"><span class="page-link">...</span></li>
                  <% } %>
                <% } %>

                <% for (let page = startPage; page <= endPage; page++) { %>
                  <li class="page-item <%= page === currentPage ? 'active' : '' %>">
                    <a class="page-link" href="/feed?page=<%= page %>"><%= page %></a>
                  </li>
                <% } %>

                <% if (endPage < totalPages) { %>
                  <% if (endPage < totalPages - 1) { %>
                    <li class="page-item disabled"><span class="page-link">...</span></li>
                  <% } %>
                  <li class="page-item">
                    <a class="page-link" href="/feed?page=<%= totalPages %>"><%= totalPages %></a>
                  </li>
                <% } %>

              <% if (hasNextPage) { %>
                <li class="page-item">
                  <a class="page-link" href="/feed?page=<%= currentPage + 1 %>" aria-label="Next">
                    <span aria-hidden="true">Next &raquo;</span>
                  </a>
                </li>
              <% } else { %>
                <li class="page-item disabled">
                  <span class="page-link">Next &raquo;</span>
                </li>
              <% } %>
            </ul>
          </nav>
          <p class="text-center text-muted">Page <%= currentPage %> of <%= totalPages %></p>
        </div>
        <% } %>

      </div>
      <%- include('partials/footer') -%>