                <div class="card-img">
                  <img src="<%= jams[i].image %>" alt="<%= jams[i].title %>" class="img-fluid">
                </div>
                <div class="card-body">
                  <h5 class="card-title">
                    <%= jams[i].title %>
                  </h5>
                  <p>
                    <%= jams[i].description %>
                  </p>
                </div>
              </div>
            </a>
          </div>
          <% } %>
            <% } %>
    </div>
  </div>

  </div>

