<%- include('partials/header') -%>

<section class="container">
<h1><%=jam.title %></h1>

<ul class="column">
  <% for(var i=0; i<myAudioClips.length; i++) {%>
    <li>
      <p><%=myAudioClips[i].title %></p>
        <audio controls>
          <source src="<%= myAudioClips[i].audio%>" type="audio/wav">
          Your browser does not support the audio tag.
        </audio>
        <form
        class="col-1"
        action="/post/addClipToJam/<%= jam.id %>/<%= myAudioClips[i]._id%>?_method=PUT"
        method="POST"
      >
        <button class="btn btn-primary fa fa-heart" type="submit"></button>
      </form>
    </li>
    <% } %>
</ul>

<ul class="column">
  <% for(var i=0; i<jamAudioClips.length; i++) {%>
    <li>
      <p><%=jamAudioClips[i].title %></p>
        <audio controls>
          <source src="<%= jamAudioClips[i].audio%>" type="audio/wav">
          Your browser does not support the audio tag.
        </audio>
        <form
        class="col-1"
        action="/post/deleteClipToJam/<%= jam.id %>/<%= myAudioClips[i]._id%>?_method=PUT"
        method="POST"
      >
        <button class="btn btn-primary fa fa-trash" type="submit"></button>
      </form>
    </li>
    <% } %>
</ul>

</section>
<%- include('partials/footer') -%>
